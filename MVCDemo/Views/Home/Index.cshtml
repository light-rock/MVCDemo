@model IEnumerable<MVCDemo.Models.Person>

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <title>Index</title>
</head>
<body>

    <div class="container">
        <div class="row">
        <div>
            <h1>Test App</h1>
            <h2>Stored Procedures, ASP.Net Core, some Bootstrap, and some Javascript</h2>
        </div>
        <br />
        <br />
        <h3>List Person(s)</h3>
        <table class="table">
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    State
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Date of Birth
                </th>
            </tr>

            @foreach (var person in Model)
            {
                <tr>
                    <td valign="top" align="left">
                        @Html.DisplayFor(modelItem => person.first_name)
                    </td>
                    <td valign="top" align="left">
                        @Html.DisplayFor(modelItem => person.last_name)
                    </td>
                    <td valign="top" align="left">
                        @Html.DisplayFor(modelItem => person.state_code)
                    </td>
                    <td valign="top" align="left">
                        @Html.DisplayFor(modelItem => person.gender)
                    </td>
                    <td valign="top" align="left">
                        @Html.DisplayFor(modelItem => person.dob)
                    </td>
                    <td valign="top" align="left"><a href="">Edit</a></td>
                </tr>
            }

        </table>
        </div>

        <div class="row">
        <button id="btnclick" onclick="$('#popupedit').modal('show');">edit</button>
        </div>

        <div class="row">
            <div class="col-xs-10">
                <div class="modal fade" id="popupedit">
                    <div class="modal-dialog modal-md">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">
                                    close
                                </button>
                                <h4 class="modal-title">Edit Person</h4>
                            </div>
                            <form method="post" action="./Add">
                                <div class="modal-body">

                                        <div class="form-group">
                                            <input class="form-control" type="text" placeholder="First Name" asp-for="first_name" />
                                        </div>
                                        <div class="form-group">
                                            <input class="form-control" type="text" placeholder="Last Name" asp-for="last_name" />
                                        </div>
                                        <div class="form-group">
                                            <input class="form-control" type="text" placeholder="Gender Name" asp-for="gender" />
                                        </div>
                                        <div class="form-group">
                                            <input class="form-control" type="text" placeholder="State" asp-for="state_code" />
                                        </div>
                                        <div class="form-group">
                                            <input class="form-control" type="text" placeholder="Date of Birth" asp-for="dob" />
                                        </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>


</body>
</html>
